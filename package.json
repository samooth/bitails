{
  "name": "bitails",
  "version": "0.2.4",
  "author": {
    "name": "@samooth"
  },
  "description": "A Bitails API JS Wrapper library",
  "keywords": [
    "Bitcoin",
    "BSV",
    "Blockchain",
    "Bitcoin SV"
  ],
  "license": "Open BSV",
  "files": [
    "index.js",
    "src/*",
    "dist/*"
  ],
  "source": "src/index.js",
  "homepage": "http://github.com/samooth/bitails",
  "repository": {
    "type": "git",
    "url": "git://github.com/samooth/bitails.git"
  },
  "scripts": {
    "lint": "eslint --fix --ext .js src",
    "test": "NODE_ENV=test mocha",
    "build": "rm -rf dist/** && npx parcel build index.js",
    "build:test": "rm -rf dist/** && parcel build test.html",
    "build2": "npx browserify src/index.js --standalone Explorer > dist/bitails.browser.js",
    "update": "scp dist/index.js bsv.direct:/srv/www/bsv.direct/lib/bitails",
    "update2": "scp bitails.browser.js bsv.direct:/srv/www/bsv.direct/lib/explorer.js",
    "update:test": "scp dist/test.* bsv.direct:/srv/www/bsv.direct/lib/bitails",
    "go:test": "npm run build:test && npm run update:test"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "axios-extensions": "^3.1.3",
    "buffer": "^6.0.3",
    "form-data": "^4.0.0",
    "node-blob": "^0.0.2"
  },
  "devDependencies": {
    "browser-resolve": "^2.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^4.1.0",
    "esmify": "^2.1.1",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "process": "^0.11.10",
    "reify": "^0.20.12"
  }
}
